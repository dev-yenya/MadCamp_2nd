<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/play_background">

    <TextView
        android:id="@+id/text_online_levels_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recycler_view_online_levels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/online_levels_title"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_online_levels"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.7"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/imgbtn_online_levels_prev_page"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_online_levels"
        app:layout_constraintStart_toStartOf="@id/recycler_view_online_levels"
        android:src="@drawable/arrowkey_left"
        android:background="@color/transparent"
        android:scaleType="centerCrop"
        />

    <ImageButton
        android:id="@+id/imgbtn_online_levels_next_page"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_online_levels"
        app:layout_constraintEnd_toEndOf="@id/recycler_view_online_levels"
        android:src="@drawable/arrowkey_right"
        android:background="@color/transparent"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/text_online_levels_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/recycler_view_online_levels"
        app:layout_constraintBottom_toBottomOf="@id/imgbtn_online_levels_next_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/online_load_failed_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintVertical_bias="0.4"
        android:src="@drawable/online_load_failed"
        />

    <TextView
        android:id="@+id/online_load_failed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/online_load_failed_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/online_levels_load_failed"
        android:textSize="18sp"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>